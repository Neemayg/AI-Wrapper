<body>
    <div class="container">
        <!-- Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <div class="logo-icon">AI</div>
                    <div class="logo-text">AI Wrapper</div>
                </div>
                <button class="close-sidebar" id="closeSidebarBtn">âœ•</button>
            </div>

            <button class="new-chat-btn" id="newChatBtn">
                <span style="font-size: 16px;">+</span> Start new chat
            </button>

            <nav class="sidebar-nav">
                <button class="sidebar-item active">
                    <span>ðŸ’¬</span> Chats
                </button>
                <button class="sidebar-item">
                    <span>â–¦</span> Projects
                </button>
            </nav>

            <div class="sidebar-recents" style="display: none;"></div>

            <div class="sidebar-footer">
                <div class="user-profile">
                    <div class="user-avatar">U</div>
                    <div class="user-info">
                        <div class="user-name">User</div>
                        <div class="user-plan">Free plan</div>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main">
            <header class="header">
                <div style="display: flex; align-items: center; gap: 0.75rem;">
                    <button class="menu-btn" id="menuBtn">â˜°</button>
                    <span class="header-title" id="headerTitle"></span>
                </div>
                <div style="width: 32px;"></div>
            </header>

            <div class="content" id="content">
                <!-- Empty State -->
                <div class="empty-state" id="emptyState">
                    <div class="empty-icon">
                        <div class="empty-icon-inner">AI</div>
                    </div>
                    <h1 class="empty-title">Thinking and Building...</h1>
                    <div class="input-wrapper" id="emptyInputWrapper"></div>
                    <div class="suggestion-pills">
                        <button class="suggestion-pill">Help me write a story</button>
                        <button class="suggestion-pill">Summarize this file</button>
                        <button class="suggestion-pill">Explain code</button>
                    </div>
                </div>

                <!-- Chat Container (hidden initially) -->
                <div class="chat-container" id="chatContainer" style="display: none;"></div>
            </div>

            <!-- Input Area (shown when chatting) -->
