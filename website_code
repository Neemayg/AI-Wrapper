    <script>
        // State
        let messages = [];
        let inputValue = '';
        let isTyping = false;
        let isSidebarOpen = window.innerWidth >= 768;

        const elements = {
            sidebar: document.getElementById('sidebar'),
            sidebarOverlay: document.getElementById('sidebarOverlay'),
            menuBtn: document.getElementById('menuBtn'),
            closeSidebarBtn: document.getElementById('closeSidebarBtn'),
            newChatBtn: document.getElementById('newChatBtn'),
            content: document.getElementById('content'),
            emptyState: document.getElementById('emptyState'),
            chatContainer: document.getElementById('chatContainer'),
            inputArea: document.getElementById('inputArea'),
            headerTitle: document.getElementById('headerTitle'),
        };

        // Initialize
        function init() {
            renderInputArea('emptyInputWrapper');
            setupEventListeners();
            updateSidebarState();
        }

        function setupEventListeners() {
            elements.menuBtn.addEventListener('click', toggleSidebar);
            elements.closeSidebarBtn.addEventListener('click', closeSidebar);
            elements.sidebarOverlay.addEventListener('click', closeSidebar);
            elements.newChatBtn.addEventListener('click', newChat);
            window.addEventListener('resize', handleResize);
        }

        function toggleSidebar() {
            isSidebarOpen = !isSidebarOpen;
            updateSidebarState();
        }

        function closeSidebar() {
            isSidebarOpen = false;
            updateSidebarState();
        }

        function updateSidebarState() {
            if (isSidebarOpen) {
                elements.sidebar.classList.remove('hidden');
                elements.sidebarOverlay.classList.add('active');
            } else {
                elements.sidebar.classList.add('hidden');
                elements.sidebarOverlay.classList.remove('active');
            }
        }

        function handleResize() {
            if (window.innerWidth >= 768) {
                isSidebarOpen = true;
                updateSidebarState();
            }
        }

        function newChat() {
            messages = [];
            inputValue = '';
            renderChat();
        }

        function handleSendMessage() {
            if (!inputValue.trim()) return;

            messages.push({ role: 'user', content: inputValue });
            inputValue = '';
            renderChat();
            isTyping = true;
            updateInputArea();

            setTimeout(() => {
                messages.push({
                    role: 'assistant',
                    content: 'Here is the rephrased version of your content based on the specified constraints.'
                });
                isTyping = false;
                renderChat();
            }, 1500);
        }

        function handleFileUpload(e) {
            const file = e.target.files[0];
            if (file) {
                alert(`File ${file.name} uploaded (Simulation)`);
            }
        }

        function renderChat() {
            if (messages.length === 0) {
                elements.emptyState.style.display = 'flex';
                elements.chatContainer.style.display = 'none';
                elements.inputArea.style.display = 'none';
            } else {
                elements.emptyState.style.display = 'none';
                elements.chatContainer.style.display = 'block';
                elements.inputArea.style.display = 'block';

                elements.chatContainer.innerHTML = messages.map((msg, idx) => `
                    <div class="message-group ${msg.role === 'user' ? 'user' : ''}">
                        <div class="message-avatar ${msg.role === 'bot' ? 'bot' : msg.role === 'user' ? 'user' : 'bot'}">
                            ${msg.role === 'user' ? 'N' : 'C'}
                        </div>
                        <div class="message-content">
                            <div class="message-sender">${msg.role === 'user' ? 'Neemay' : 'AI Wrapper'}</div>
                            <div class="message-text">${msg.content}</div>
                        </div>
                    </div>
                `).join('');

                if (isTyping) {
                    elements.chatContainer.innerHTML += `
                        <div class="message-group">
                            <div class="message-avatar bot">C</div>
                            <div class="typing-indicator">
                                <div class="typing-dot"></div>
                                <div class="typing-dot"></div>
                                <div class="typing-dot"></div>
                            </div>
                        </div>
                    `;
                }

                elements.chatContainer.scrollTop = elements.chatContainer.scrollHeight;
                updateInputArea();
            }
        }

        function renderInputArea(parentId = 'inputArea') {
            const parent = document.getElementById(parentId);
            parent.innerHTML = `
                <div class="input-container">
                    <div class="input-box">
                        <button class="attach-btn" id="attachBtn">+</button>
                        <div class="attach-menu hidden" id="attachMenu">
                            <label class="attach-item">
                                <span>ðŸ“Ž</span>
                                <span>Upload a file</span>
                                <input type="file" id="fileInput">
                            </label>
                            <button class="attach-item">
                                <span>ðŸ“¸</span>
                                <span>Take a screenshot</span>
                            </button>
                        </div>
                        <textarea id="inputTextarea" placeholder="How can I help you today?"></textarea>
                        <button class="send-btn" id="sendBtn">â†‘</button>
                    </div>
                    <div class="input-footer">
                        <span class="input-model">Base Model</span>
                    </div>
                    ${messages.length > 0 ? '<div class="disclaimer">AI Wrapper can make mistakes. Please use with discretion.</div>' : ''}
                </div>
            `;

            const textarea = document.getElementById('inputTextarea');
            const sendBtn = document.getElementById('sendBtn');
            const attachBtn = document.getElementById('attachBtn');
            const attachMenu = document.getElementById('attachMenu');
            const fileInput = document.getElementById('fileInput');

            textarea.value = inputValue;
            textarea.addEventListener('input', (e) => {
                inputValue = e.target.value;
                e.target.style.height = 'auto';
                e.target.style.height = Math.min(e.target.scrollHeight, 240) + 'px';
                updateSendBtn();
            });

            textarea.addEventListener('keydown', (e) => {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    handleSendMessage();
                }
            });

            sendBtn.addEventListener('click', handleSendMessage);
            updateSendBtn();

            attachBtn.addEventListener('click', () => {
                attachMenu.classList.toggle('hidden');
            });

            fileInput.addEventListener('change', handleFileUpload);

            document.addEventListener('click', (e) => {
                if (!attachBtn.contains(e.target) && !attachMenu.contains(e.target)) {
                    attachMenu.classList.add('hidden');
                }
            });
        }

        function updateInputArea() {
            if (messages.length > 0) {
                renderInputArea('inputArea');
            }
        }

        function updateSendBtn() {
            const sendBtn = document.getElementById('sendBtn');
            if (sendBtn) {
                if (inputValue.trim()) {
                    sendBtn.style.background = '#D97757';
                    sendBtn.style.cursor = 'pointer';
                    sendBtn.disabled = false;
                } else {
                    sendBtn.style.background = '#424242';
                    sendBtn.style.cursor = 'not-allowed';
                    sendBtn.disabled = true;
                }
            }
        }

        init();
    </script>
</body>
</html>
